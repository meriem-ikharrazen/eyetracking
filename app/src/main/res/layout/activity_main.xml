<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|bottom"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/text_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:text="@string/start_text"
            android:textAlignment="center"
            android:textSize="20sp"
            android:paddingVertical="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <androidx.appcompat.widget.AppCompatButton

                style="@style/textBtnStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/first" />

            <androidx.appcompat.widget.AppCompatButton

                style="@style/textBtnStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/abc"

                />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/textBtnStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/def" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <androidx.appcompat.widget.AppCompatButton


                style="@style/textBtnStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/btn_shape"
                android:text="@string/ghi" />

            <androidx.appcompat.widget.AppCompatButton

                style="@style/textBtnStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/jkl"

                />

            <androidx.appcompat.widget.AppCompatButton

                style="@style/textBtnStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/mno"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <androidx.appcompat.widget.AppCompatButton


                style="@style/textBtnStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/btn_shape"
                android:text="@string/pqrs" />

            <androidx.appcompat.widget.AppCompatButton

                style="@style/textBtnStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/tuv"

                />

            <androidx.appcompat.widget.AppCompatButton

                style="@style/textBtnStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/xywz"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/valide"
                android:drawableLeft="@drawable/ic_speaker"
                style="@style/actionBtnStyle"
                />

            <androidx.appcompat.widget.AppCompatButton

                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/clear"
                android:drawableLeft="@drawable/ic_clear"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
>

            <org.opencv.android.JavaCameraView
                android:id="@+id/camera_frame"
                android:layout_width="160dp"
                android:layout_height="206dp"
                android:layout_marginTop="20dp"
                 />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>

